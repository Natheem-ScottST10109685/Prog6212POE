@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Claim Submitted</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f4f8;
        }
        .container {
            text-align: center;
            background-color: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
        }
        .btn {
            margin: 10px;
            transition: all 0.3s ease;
        }
        .btn-primary {
            background-color: #2c5282;
            border-color: #2c5282;
        }
        .btn-primary:hover {
            background-color: #2b6cb0;
            border-color: #2b6cb0;
        }
        h1 {
            color: #2c5282;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <a href="/">Home</a>
        @if (User.IsInRole("Lecturer"))
        {
            <a href="/Lecturer/Claim">Claim</a>
            <a href="/Lecturer/ViewAll">View All</a>
        }
        else if (User.IsInRole("ProgrammeCoordinator") || User.IsInRole("AcademicManager"))
        {
            <a href="/Coordinator/CoordDashboard">Dashboard</a>
            <a href="/Coordinator/CoordMange">Manage</a>
        }
    </nav>
    <div class="container">
        <h1>Claim Submitted Successfully</h1>
        <p class="lead mb-4">Your claim has been saved and will be reviewed by a coordinator.</p>
        <h2 class="h4 mb-4">Would you like to submit another claim?</h2>
        <div class="mt-4">
            <a href="/Home/NewClaim" class="btn btn-primary">Submit Another Claim</a>
            <a href="/Home/LecturerDashBoard" class="btn btn-secondary">Return to DashBoard</a>
        </div>
    </div>
</body>
</html>